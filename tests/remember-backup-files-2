# Patch must not overwrite backup files it has created itself.

. $srcdir/test-lib.sh

require_cat
use_local_patch
use_tmpdir

# ==============================================================

echo one > f

cat > f.diff <<EOF
--- f
+++ /dev/null
@@ -1 +0,0 @@
-one
--- /dev/null
+++ f
@@ -0,0 +1 @@
+two
EOF

check 'patch --backup -p0 < f.diff' <<EOF
patching file f
patching file f
EOF

check 'cat f.orig' <<EOF
one
EOF

check 'cat f' <<EOF
two
EOF
